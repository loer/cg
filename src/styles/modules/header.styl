header
	position fixed
	top 0
	left 0
	width 100%
	z-index 2
	height $headerHeight
	background-color #181818
	color #fff
		
	ul
		list-style-type none
		text-align center
		padding 0
		margin 0
		
		li
			display inline-block
			line-height $headerHeight
			margin-right 1em
			
			a
				color #ccc
				
				&:hover
					color #fff
					text-decoration none
					
			&.logo
				color $blue
				margin-right 3rem
				
				span
					font-weight $bold

header
	+mobile()
		height $headerHeightMobile

		ul li
			margin-right .5em
			line-height 2em
			
			&.logo
				display block
				margin 1em 0 0
